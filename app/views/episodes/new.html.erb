<h1>New Episode</h1>

<!-- nested form -->
<!-- creates an episode within a podcast -->
<%= form_for ([@podcast, @episode]) do |f| %>
	<%= f.label :title %><br>
	<%= f.text_field :title %>

	<br>
	<br>

	<%= f.label :description %><br>
	<%= f.text_area :description %>

	<br> 
	<br>

	<%= f.submit %>
<% end %>